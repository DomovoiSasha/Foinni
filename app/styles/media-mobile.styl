+between(320px, 599px)
	.main-header
		size(100%, auto)

		&__bunner
			size(100%, 80vw)

	.top-header
		size(100%, 15vw)
		padding 0 10vw
		background-color rgba(#000, 0.6)

	.logo
		font(Roboto, 7vw, 7vw, 500)

		&--accent
			margin-left -2vw
			font(Pacifico, 11vw, 7vw)

	.main-nav
		size(7.5vw)
		
		&__menu
			position absolute
			top 13.5vw
			right  -10vw
			display none
			size(100vw, auto)
		
		&__btn
			display block
			size(10vw)
			margin-top -1.3vw
			margin-left -1.5vw
			padding 1vw
		
		&__svg-menu
			size(100%)

		&__item
			display block
			padding 4.3vw
			background-color rgba(#000, 0.9)
			border-bottom 1px solid textColor
			text-align center
			font(Roboto, 4vw, 4vw, 200)
			
			&--active
				border-bottom 1px solid accent

				&:after
					display none
			
	.bunner
		&__title
			padding 4vw 0
			font(Exo, 7vw)

		&__tagline
			padding 1.7vw 9vw
			font(Roboto, 3vw, 4.5vw, 200)
			
	.main-content
		size(100%, auto)
		font(Roboto, 3vw, 3.8vw, 100)

	.welcome
		padding 8vw 8vw 2vw

		&__title
			margin-bottom 3.5vw
			font(Roboto, 4vw, 4.5vw, 500)

		&__discription
			margin-bottom 6vw
			padding 0 3vw
			
		&__option-list
			justify-content center

	.option
		size(65vw, auto)
		padding 5vw 4vw 5vw

		&:nth-of-type(1),
		&:nth-of-type(2),
		&:nth-of-type(3),
		&:nth-of-type(4),
		&:nth-of-type(5)
			margin-bottom 5.5vw

		&__icon
			size(6.5vw, 7.7vw)
			margin-bottom 2.3vw

		&__title
			font-size 3.5vw
			margin-bottom 3.2vw

		&__description
			font-size 2.8vw
			line-height 3.9vw