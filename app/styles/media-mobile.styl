+between(320px, 599px)
	.main-header
		size(100%, auto)

		&__bunner
			size(100%, 80vw)

	.top-header
		size(100%, 15vw)
		padding 0 10vw
		background-color rgba(#000, 0.6)

	.logo
		font(Roboto, 7vw, 7vw, 500)

		&--accent
			margin-left -2vw
			font(Pacifico, 11vw, 7vw)

	.main-nav
		size(7.5vw)
		
		&__menu
			position absolute
			top 13.5vw
			right  -10vw
			display none
			size(100vw, auto)
		
		&__btn
			display block
			size(10vw)
			margin-top -1.3vw
			margin-left -1.5vw
			padding 1vw
		
		&__svg-menu
			size(100%)

		&__item
			display block
			padding 4.3vw
			background-color rgba(#000, 0.9)
			border-bottom 1px solid textColor
			text-align center
			font(Roboto, 4vw, 4vw, 200)
			
			&--active
				border-bottom 1px solid accent

				&:after
					display none
			
	.bunner
		&__title
			padding 4vw 0
			font(Exo, 7vw)

		&__tagline
			padding 1.7vw 9vw
			font(Roboto, 3vw, 4.5vw, 200)
			
	.main-content
		size(100%, auto)
		font(Roboto, 3vw, 3.8vw, 100)
		
		&__welcome
			padding 8vw 8vw 2vw
		
		&__team
			padding 8vw 0 2vw
			
		&__works
			padding 8vw 0 2vw
			
		&__price
			padding 8vw 8vw 8vw 
			font(Roboto, 3.2vw, 6vw, 100)

	.welcome
		&__title
			margin-bottom 3.5vw
			font(Roboto, 4vw, 4.5vw, 500)

		&__discription
			margin-bottom 6vw
			padding 0 3vw
			
		&__option-list
			justify-content center

	.option
		size(65vw, auto)
		padding 5vw 4vw 5vw

		&:nth-of-type(1),
		&:nth-of-type(2),
		&:nth-of-type(3),
		&:nth-of-type(4),
		&:nth-of-type(5)
			margin-bottom 5.5vw

		&__icon
			size(6.5vw, 7.7vw)
			margin-bottom 2.3vw

		&__title
			font-size 3.5vw
			margin-bottom 3.2vw

		&__description
			font-size 2.8vw
			line-height 3.9vw
			
	.team
		&__title
			margin-bottom 3.5vw
			font(Roboto, 4vw, 4.5vw, 500)

		&__list
			flex-wrap wrap
			justify-content space-around
			
	.member
		size(40vw, auto)
		
		&:nth-of-type(1),
		&:nth-of-type(2)
			margin-bottom 3.33vw
			
		&:hover
			.member__info
				bottom -5%
				left -5%
				size(110%, 110%)
				padding-top 45%
				background-color rgba(accent, 0.9)

			.member__social
				display block

		&__photo
			height 52.2vw

		&__info
			padding 1.67vw 0

		&__name
			font(Roboto, 3.2vw, 3.8vw, 300)

		&__position
			font(Roboto, 2.5vw, 3.2vw, 100)

		&__social
			margin-top 15vw
			padding 1.5vw

		&__social-icon
			max-height 2.83vw
			max-width 7.5vw
			
	.works
		&__title
			margin-bottom 3.5vw
			font(Roboto, 4vw, 4.5vw, 500)

		&__types li
			margin-bottom 3vw
			
		&__photos-block
			justify-content center
			
			img
				size(43vw)
				margin 2vw 0

		&__see-more
			margin-top 1.25vw
			padding 2vw 4vw
			font(Roboto, 2.7vw, 2.7vw, 100)

	.types__item
		padding 0.31vw 1.25vw
		font(Roboto, 2.7vw, 3.5vw, 100)
		
	.price
		position relative
		height 100vw
		
		&__title
			margin-bottom 4vw
			font(Roboto, 4vw, 4.5vw, 500)
			
		&__btn-prev
			position absolute
			top 50%
			left 5vw
			display block
			size(7vw)
			background-color transparent
			border none
			
		&__prev-icon
			size(7vw)
			fill textColor
			
		&__btn-next
			position absolute
			top 50%
			right 5vw
			display block
			size(7vw)
			background-color transparent
			border none
			
		&__next-icon
			size(7vw)
			fill textColor

	.price-plan
		display none
		width 60vw
		height 77vw
		margin 0 auto
			
		&:nth-of-type(3)
			display block

		&__name
			padding 3.5vw 0

		&__price
			padding 4vw 0 3.5vw
			font(Roboto, 4vw, 4vw, 500)

		&__time
			font(Roboto, 3vw, 3.25vw, 100)

		&__options
			padding 4.5vw 0 2.5vw

		&__btn-order
			margin 3vw
			padding 2.5vw 4vw 2.2vw
	