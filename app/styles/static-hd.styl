*, *:before, *:after 
	margin 0
	padding 0
	box-sizing border-box
	text-decoration none
	outline none
	list-style none

body 
	max-width 1600px
	margin 0 auto
	padding 0
	background-color #fffcf4
	color textColor
	font(Roboto, 18px, 30px, 100)
	
.main-header
	position relative
	size(100%, 800px)
	background-color darkText
	background-image url('../images/bunner.jpg')
	background-repeat no-repeat
	background-size  auto 100%
	background-position center
	color #fff
	overflow hidden
	
	&__bunner
		size(100%, 680px)
	
.top-header
	position relative
	display flex
	flex-direction row
	justify-content space-between
	align-items center
	size(100%, 120px)
	padding 0 260px
	border-bottom 1px solid #4a4a4b
	
.logo
	font(Roboto, 40px, 40px, 500)
	color #ffffff
	
	&__link
		color #ffffff
	
	&--accent
		margin-left -10px
		font(Pacifico, 70px, 40px)
		font-style italic
		color accent
		
.main-nav
	position relative
	
	&__menu
		position relative
		display block
		font(Roboto, 14px, 14px, 200)
		text-transform uppercase
		color #ffffff
	
	&__svg-menu
		display block
		size(35px)
		fill #ffffff
		
	&__btn
		position relative
		display none
		size(35px)
		border none
		background-color transparent
	
	&__item
		padding 20px
		color #ffffff
		
		&:hover
			background-color rgba(#ffffff, 0.2)
			
		&:active
			color accent
			background-color transparent
		
		&--active
			position relative
			color  accent
			
			&:after
				content ''
				position absolute
				bottom 0px
				left 20%
				display inline-block
				size(60%, 1px)
				background-color accent
				text-align center
				
.bunner
	display flex
	flex-direction column
	justify-content center
	color #ffffff
	text-align center
	
	&__title
		padding 25px 0
		font(Exo, 48px)
		
	&__logo
		text-transform uppercase
		color accent
		font-weight 600
		cursor pointer
		
	&__tagline
		size(100%, auto)
		padding 20px 340px
		align-self center
		font(Roboto, 18px, 36px, 200)
		
.main-content
	size(100%, auto)
	font(Roboto, 20px, 30px, 100)
	overflow hidden
	
	&__team
		display flex
		flex-direction column
		text-align center
		padding 100px 215px 40px
		
	&__welcome
		padding 120px 215px 20px
		
	&__works
		padding 100px 215px 20px
		
	&__price
		padding 80px 230px 125px 
		text-align center
		color textColor
		font(Roboto, 14px, 26px, 100)
	
.welcome
	display flex
	flex-direction column
	text-align center
	
	&__title
		margin-bottom 50px
		font(Roboto, 30px, 36px, 500)
		color darkText
		
	&__logo
		text-transform uppercase
		color accent
		
	&__discription
		margin-bottom 75px
		padding 0 140px
		
	&__option-list
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		
.option
	size(355px, auto)
	padding 35px 15px 30px
	text-decoration none
	color darkText
	border 1px solid textColor
	transform 0.25s ease
	
	&:nth-of-type(1),
	&:nth-of-type(2),
	&:nth-of-type(3)
		margin-bottom 48px
		
	&:hover 
		border-color accent
		
		.option__icon
			fill accent
			
		.option__title
			color accent
		
	&__icon
		size(30px, 40px)
		margin-bottom 15px
		fill darkText
		transform 0.25s ease
		
	&__title
		font-size 24px
		margin-bottom 25px
		transform 0.25s ease
		
	&__description
		font-size 14px
		line-height 30px
		
.team
	&__title
		margin-bottom 50px
		font(Roboto, 30px, 36px, 500)
		color darkText
		
	&__list
		display flex
		flex-direction row
		justify-content space-between
		flex-wrap nowrap
	
.member
	position relative
	size(270px, auto)
	background-color #ccc
	border 1px solid #f3fdf9
	
	&:hover
		.member__info
			bottom -7%
			left -5%
			size(110%, 114%)
			padding-top 62%
			background-color rgba(accent, 0.9)
			
		.member__social
			display block
			
	&__photo
		size(100%, auto)
		max-height 355px
	
	&__info
		position absolute
		left 0
		bottom 0
		display block
		size(100%, auto)
		padding 15px 0
		background-color rgba(dark, 0.9)
		color #fffcf4			
		
	&__name
		font(Roboto, 18px, 25px, 300)
	
	&__position
		font(Roboto, 14px, 18px, 100)
	
	&__social
		display none
		size(100%, auto)
		margin-top 90px
		padding 9px
		text-align center
		border-top 1px solid rgba(#ffffff, 0.5)
		border-bottom 1px solid rgba(#ffffff, 0.5)
	
	&__social-icon
		max-height 17px
		max-width 45px
		fill #fffcf4
		
		
		
		
.works
	text-align center
	
	&__title
		margin-bottom 50px
		font(Roboto, 30px, 36px, 500)
		color darkText
		
	&__types li
		display inline-block
		margin-bottom 25px
		color darkText
		
	&__photos-block
		width 100%
		display flex
		flex-direction row
		justify-content space-between
		flex-wrap wrap
		
		img
			size(390px)
			margin 25px 0
		
	&__see-more
		margin-top 20px
		padding 20px 60px
		background-color accent
		color #ffffff
		font(Roboto, 18px, 18px, 100)
		border 2px solid transparent
			
		&:hover
			background-color transparent
			border 2px solid accent
			color accent
		
.types__item
	padding 5px 20px
	color darkText
	font(Roboto, 18px, 36px, 200)

	&:hover,
	&:active
		color accent
	
.ui-state-active .types__item
	color accent

.price
	&__title
		margin-bottom 20px
		font(Roboto, 30px, 36px, 500)
		color darkText

.price-plan
	display inline-block
	width 265px
	margin 0 10px
	text-align center
	
	&:hover
		.price-plan__description
			border-color accent
			
		.price-plan__name
			color accent
			
		.price-plan__price
			background-color accent
			color #ffffff
			border-color accent
			
		.price-plan__btn-order
			background-color accent
			color #ffffff
			border-color accent
			
	&__description
		border 1px solid  transparent
	
	&__name
		padding 30px 0
	
	&__price
		padding 25px 0 13px
		font(Roboto, 36px, 36px, 500)
		color #454546
		border 1px solid textColor
		
	&__time
		font(Roboto, 18px, 36px, 100)
		
	&__options
		padding 35px 0 27px
		list-style none
		
	&__btn-order
		margin 22px
		padding 13px 16px 11px
		background-color transparent
		border 1px solid textColor
		
	&__btn-prev,
	&__btn-next
		display none
	
	
	
	
	
	
	
	
	
	
	
	
	
















