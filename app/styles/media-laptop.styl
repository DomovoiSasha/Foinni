+between(900px, 1299px)
	.main-header
		size(100%, 50vw)

		&__bunner
			size(100%, 42.5vw)

	.top-header
		size(100%, 7.5vw)
		padding 0 16.25vw

	.logo
		font(Roboto, 3vw, 3vw, 500)

		&--accent
			margin-left -0.9vw
			font(Pacifico, 5vw, 3.08vw)

	.main-nav
		font(Roboto, 1.1vw, 1.1vw, 200)
		
		&__item
			padding 1.5vw
			
	.bunner
		&__title
			padding 1.92vw 0
			font(Exo, 3.69vw)

		&__tagline
			padding 1.54vw 24vw
			font(Roboto, 1.38vw, 2.77vw, 200)
			
	.main-content
		font(Roboto, 1.54vw, 2.3vw, 100)
		
		&__welcome
			padding 8vw 10vw 1.54vw
		
		&__team
			padding 8vw 10vw 1.54vw
			
		&__works
			padding 8vw 10vw 1.54vw

	.welcome
		&__title
			margin-bottom 2.5vw
			font(Roboto, 1.88vw, 2.77vw, 500)

		&__discription
			margin-bottom 5.77vw
			padding 0 9vw

	.option
		size(25vw, auto)
		padding 2.69vw 1.15vw 2.31vw

		&:nth-of-type(1),
		&:nth-of-type(2),
		&:nth-of-type(3)
			margin-bottom 3.69vw

		&__icon
			size(2.31vw, 3.08vw)
			margin-bottom 1.15vw

		&__title
			font-size 1.85vw
			margin-bottom 1.92vw

		&__description
			font-size 1.08vw
			line-height 2.31vw
			
	.team
		&__title
			margin-bottom 2.5vw
			font(Roboto, 1.88vw, 2.77vw, 500)

	.member
		size(18vw, auto)
				
		&__photo
			height 23.5vw

		&__info
			padding 0.94vw 0

		&__name
			font(Roboto, 1.13vw, 1.56vw, 300)

		&__position
			font(Roboto, 0.88vw, 1.13vw, 100)

		&__social
			margin-top 5.63vw
			padding 0.56vw

		&__social-icon
			max-height 1.06vw
			max-width 2.81vw
			
	.works
		&__title
			margin-bottom 2.5vw
			font(Roboto, 1.88vw, 2.77vw, 500)

		&__types li
			margin-bottom 1vw
			
		&__photos-block
			justify-content center
			
			img
				size(26vw)
				margin 1.3vw 0

		&__see-more
			margin-top 1.25vw
			padding 1.25vw 3.75vw
			font(Roboto, 1.3vw, 1.3vw, 100)

	.types__item
		padding 0.31vw 1.25vw
		font(Roboto, 1.3vw, 2.25vw, 200)