+between(900px, 1299px)
	.main-header
		size(100%, 50vw)

		&__bunner
			size(100%, 42.5vw)

	.top-header
		size(100%, 7.5vw)
		padding 0 16.25vw

	.logo
		font(Roboto, 3vw, 3vw, 500)

		&--accent
			margin-left -0.9vw
			font(Pacifico, 5vw, 3.08vw)

	.main-nav
		font(Roboto, 1.1vw, 1.1vw, 200)
		
		&__item
			padding 1.5vw
			
	.bunner
		&__title
			padding 1.92vw 0
			font(Exo, 3.69vw)

		&__tagline
			padding 1.54vw 24vw
			font(Roboto, 1.38vw, 2.77vw, 200)
			
	.main-content
		font(Roboto, 1.54vw, 2.3vw, 100)
		
		&__welcome
			padding 8vw 10vw 1.54vw
		
		&__team
			padding 8vw 10vw 1.54vw
			
		&__works
			padding 8vw 10vw 1.54vw
			
		&__price
			padding 8vw 10vw 8vw 
			font(Roboto, 1.3vw, 2vw, 100)
			
		&__feedback
			padding 2.19vw 19vw

	.welcome
		&__title
			margin-bottom 2.5vw
			font(Roboto, 1.88vw, 2.77vw, 500)

		&__discription
			margin-bottom 5.77vw
			padding 0 9vw

	.option
		size(25vw, auto)
		padding 2.69vw 1.15vw 2.31vw

		&:nth-of-type(1),
		&:nth-of-type(2),
		&:nth-of-type(3)
			margin-bottom 3.69vw

		&__icon
			size(2.31vw, 3.08vw)
			margin-bottom 1.15vw

		&__title
			font-size 1.85vw
			margin-bottom 1.92vw

		&__description
			font-size 1.08vw
			line-height 2.31vw
			
	.team
		&__title
			margin-bottom 2.5vw
			font(Roboto, 1.88vw, 2.77vw, 500)

	.member
		size(18vw, auto)
				
		&__photo
			height 23.5vw

		&__info
			padding 0.94vw 0

		&__name
			font(Roboto, 1.13vw, 1.56vw, 300)

		&__position
			font(Roboto, 0.88vw, 1.13vw, 100)

		&__social
			margin-top 5.63vw
			padding 0.56vw

		&__social-icon
			max-height 1.06vw
			max-width 2.81vw
			
	.works
		&__title
			margin-bottom 2.5vw
			font(Roboto, 1.88vw, 2.77vw, 500)

		&__types li
			margin-bottom 1vw
			
		&__photos-block
			justify-content center
			
			img
				size(26vw)
				margin 1.3vw 0

		&__see-more
			margin-top 1.25vw
			padding 1.25vw 3.75vw
			font(Roboto, 1.3vw, 1.3vw, 100)

	.types__item
		padding 0.31vw 1.25vw
		font(Roboto, 1.3vw, 2.25vw, 200)
		
	.price
		&__title
			margin-bottom 2.5vw
			font(Roboto, 1.88vw, 2.77vw, 500)

	.price-plan
		width 18vw
		margin 0 0.4vw

		&__name
			padding 1.88vw 0

		&__price
			padding 1.56vw 0 0.81vw
			font(Roboto, 2.25vw, 2.25vw, 500)

		&__time
			font(Roboto, 1.13vw, 2.25vw, 100)

		&__options
			padding 2.19vw 0 1.69vw

		&__btn-order
			margin 1.38vw
			padding 0.81vw 1vw 0.69vw
			
	.feedback
		&__title
			margin-bottom 2.5vw
			font(Roboto, 1.88vw, 2.77vw, 500)
			
		&__name
			margin-bottom 1.69vw
			padding 1.13vw
			font(Roboto, 1vw, 2.25vw, 100)
			placeholder(font-size, 1vw)

		&__email
			padding 1.13vw
			font(Roboto, 1vw, 2.25vw, 100)
			placeholder(font-size, 1vw)

		&__message
			padding 1.13vw
			font(Roboto, 1vw, 2.25vw, 100)
			placeholder(font-size, 1vw)

		&__btn
			margin-top 2.19vw
			padding 1.25vw 3.75vw
			font(Roboto, 1.3vw, 1.3vw, 100)
			
	.main-footer
		&__top
			size(100%, 20.8vw)
			padding 1.88vw 20vw 4.38vw 15.31vw

		&__about
			size(20vw, auto)
			margin-right 7.5vw
			font(Roboto, 1vw, 1.88vw, 100)

		&__footer-nav
			margin-right 8.8vw

		&__social-links
			size(12.5vw, 4.69vw)

		&__subscribe-form
			size(15.63vw, 8.13vw)

		&__copyright
			padding 1.56vw
			font(Roboto, 1vw, 2.25vw, 100)

	.about
		&__title
			font(Roboto, 1.13vw, 2.25vw, 300)

	.footer-nav
		&__title
			font(Roboto, 1.13vw, 2.25vw, 300)

		&__list
			column-gap 1.56vw
			
			li
				line-height 2vw

		&__link
			font(Roboto, 1vw, 1.88vw, 100)

	.social-links
		margin-bottom 0.75vw

		&__title
			font(Roboto, 1.13vw, 2.25vw, 300)

		&__link
			size(2.25vw)
			margin 0.31vw

		&__icon
			size(2.25vw)
			padding 0.63vw

	.subscribe-form
		&__title
			margin-bottom 0.31vw
			font(Roboto, 1.13vw, 2.25vw, 300)

		&__input-email
			width 15.625vw
			margin-bottom 0.94vw
			padding 0.63vw 0.5vw
			font(Roboto, 0.88vw, 1.25vw, 100)
			placeholder(font-size, 0.88vw)

		&__btn
			padding 0.63vw 1.25vw
			font(Roboto, 0.88vw, 1.25vw, 100)