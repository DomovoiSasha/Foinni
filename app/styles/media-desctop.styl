+between(1300px, 1599px)
	.main-header
		size(100%, 50vw)

		&__bunner
			size(100%, 42.5vw)

	.top-header
		size(100%, 7.5vw)
		padding 0 16.25vw

	.logo
		font(Roboto, 2.5vw, 2.5vw, 500)

		&--accent
			margin-left -0.63vw
			font(Pacifico, 4.38vw, 2.5vw)

	.main-nav
		font(Roboto, 0.88vw, 0.88vw, 200)

		&__item
			padding 1.25vw
			
	.bunner
		&__title
			padding 1.56vw 0
			font(Exo, 3vw)

		&__tagline
			padding 1.25vw 21.25vw
			font(Roboto, 1.13vw, 2.25vw, 200)
			
	.main-content
		font(Roboto, 1.25vw, 1.88vw, 100)
		
		&__team
			padding 6.25vw 13.44vw 2.5vw
			
		&__welcome
			padding 7.5vw 13.44vw 1.25vw
			
		&__works
			padding 7.5vw 13.44vw 1.25vw
			
		&__price
			padding 5vw 14vw 7.81vw 
			font(Roboto, 0.88vw, 1.63vw, 100)

	.welcome
		&__title
			margin-bottom 3.13vw
			font(Roboto, 1.88vw, 2.25vw, 500)

		&__discription
			margin-bottom 4.69vw
			padding 0 8.75vw

	.option
		size(22.19vw, auto)
		padding 2.19vw 0.94vw 1.88vw

		&:nth-of-type(1),
		&:nth-of-type(2),
		&:nth-of-type(3)
			margin-bottom 3vw

		&__icon
			size(1.88vw, 2.5vw)
			margin-bottom 0.94vw

		&__title
			font-size 1.5vw
			margin-bottom 1.56vw

		&__description
			font-size 0.88vw
			line-height 1.88vw
			
	.team
		&__title
			margin-bottom 3.13vw
			font(Roboto, 1.88vw, 2.25vw, 500)

	.member
		size(16.88vw, auto)
		
		&__photo
			max-height 22.19vw

		&__info
			padding 0.94vw 0

		&__name
			font(Roboto, 1.13vw, 1.56vw, 300)

		&__position
			font(Roboto, 0.88vw, 1.13vw, 100)

		&__social
			margin-top 5.63vw
			padding 0.56vw

		&__social-icon
			max-height 1.06vw
			max-width 2.81vw
			
	.works
		&__title
			margin-bottom 3.13vw
			font(Roboto, 1.88vw, 2.25vw, 500)

		&__types li
			margin-bottom 1.56vw
			
		&__photos-block
			justify-content center
			
			img
				size(24.35vw)
				margin 1.56vw 0

		&__see-more
			margin-top 1.25vw
			padding 1.25vw 3.75vw
			font(Roboto, 1.13vw, 1.13vw, 100)

	.types__item
		padding 0.31vw 1.25vw
		font(Roboto, 1.13vw, 2.25vw, 200)
		
	.price
		&__title
			margin-bottom 1.25vw
			font(Roboto, 1.88vw, 2.25vw, 500)

	.price-plan
		width 16.56vw
		margin 0 0.63vw

		&__name
			padding 1.88vw 0

		&__price
			padding 1.56vw 0 0.81vw
			font(Roboto, 2.25vw, 2.25vw, 500)

		&__time
			font(Roboto, 1.13vw, 2.25vw, 100)

		&__options
			padding 2.19vw 0 1.69vw

		&__btn-order
			margin 1.38vw
			padding 0.81vw 1vw 0.69vw