+between(1300px, 1599px)
	.main-header
		size(100%, 50vw)

		&__bunner
			size(100%, 42.5vw)

	.top-header
		size(100%, 7.5vw)
		padding 0 16.25vw

	.logo
		font(Roboto, 2.5vw, 2.5vw, 500)

		&--accent
			margin-left -0.63vw
			font(Pacifico, 4.38vw, 2.5vw)

	.main-nav
		font(Roboto, 0.88vw, 0.88vw, 200)

		&__item
			padding 1.25vw
			
	.bunner
		&__title
			padding 1.56vw 0
			font(Exo, 3vw)

		&__tagline
			padding 1.25vw 21.25vw
			font(Roboto, 1.13vw, 2.25vw, 200)
			
	.main-content
		size(100%, auto)
		font(Roboto, 1.25vw, 1.88vw, 100)

	.welcome
		padding 7.5vw 13.44vw 1.25vw

		&__title
			margin-bottom 3.13vw
			font(Roboto, 1.88vw, 2.25vw, 500)

		&__discription
			margin-bottom 4.69vw
			padding 0 8.75vw

	.option
		size(22.19vw, auto)
		padding 2.19vw 0.94vw 1.88vw

		&:nth-of-type(1),
		&:nth-of-type(2),
		&:nth-of-type(3)
			margin-bottom 3vw

		&__icon
			size(1.88vw, 2.5vw)
			margin-bottom 0.94vw

		&__title
			font-size 1.5vw
			margin-bottom 1.56vw

		&__description
			font-size 0.88vw
			line-height 1.88vw