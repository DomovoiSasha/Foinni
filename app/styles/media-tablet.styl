+between(600px, 899px)
	.main-header
		size(100%, auto)

		&__bunner
			size(100%, 50vw)

	.top-header
		size(100%, 9vw)
		padding 0 10vw

	.logo
		font(Roboto, 4.5vw, 4.5vw, 500)

		&--accent
			margin-left -0.9vw
			font(Pacifico, 6.8vw, 4.5vw)

	.main-nav
		font(Roboto, 1.3vw, 1.3vw, 200)
		
		&__item
			padding 1.7vw
			
	.bunner
		&__title
			padding 2vw 0
			font(Exo, 4vw)

		&__tagline
			padding 1.7vw 18vw
			font(Roboto, 1.6vw, 3.2vw, 200)
			
	.main-content
		size(100%, auto)
		font(Roboto, 2vw, 3.11vw, 100)
		
		&__welcome
			padding 8vw 10vw 2vw
		
		&__team
			padding 8vw 10vw 2vw
			
		&__works
			padding 8vw 10vw 2vw
			
		&__price
			padding 8vw 6vw 8vw 
			font(Roboto, 2vw, 3.11vw, 100)
			
		&__feedback
			padding 6vw 10vw

	.welcome
		&__title
			margin-bottom 3vw
			font(Roboto, 3.33vw, 4vw, 500)

		&__discription
			margin-bottom 5vw
			padding 0 10vw

	.option
		size(37vw, auto)
		padding 3.89vw 2vw 3.33vw

		&:nth-of-type(1),
		&:nth-of-type(2),
		&:nth-of-type(3),
		&:nth-of-type(4)
			margin-bottom 5.33vw

		&__icon
			size(3.33vw, 4.44vw)
			margin-bottom 1.67vw

		&__title
			font-size 2.67vw
			margin-bottom 2.78vw

		&__description
			font-size 1.7vw
			line-height 3.33vw
			
	.team
		&__title
			margin-bottom 3vw
			font(Roboto, 3.33vw, 4vw, 500)

	.member
		size(17.5vw, auto)
		
		&:hover
			.member__info
				bottom -7%
				left -5%
				size(110%, 114%)
				padding-top 20%
				background-color rgba(accent, 0.9)

			.member__social
				display block
				
		&__photo
			height 22.78vw

		&__info
			padding 1.67vw 0

		&__name
			font(Roboto, 1.7vw, 2vw, 300)

		&__position
			font(Roboto, 1.3vw, 2vw, 100)

		&__social
			margin-top 10vw
			padding 1vw

		&__social-icon
			max-height 1.2vw
			max-width 3vw
			
	.works
		&__title
			margin-bottom 3vw
			font(Roboto, 3.33vw, 4vw, 500)

		&__types li
			margin-bottom 1vw
			
		&__photos-block
			justify-content center
			
			img
				size(25vw)
				margin 1.3vw 0

		&__see-more
			margin-top 1.25vw
			padding 1.25vw 3.75vw
			font(Roboto, 1.8vw, 1.8vw, 100)

	.types__item
		padding 0.31vw 1.25vw
		font(Roboto, 1.8vw, 3.11vw, 100)
		
	.price
		&__title
			margin-bottom 3vw
			font(Roboto, 3.33vw, 4vw, 500)

	.price-plan
		width 21.16vw
		margin 0 0.4vw

		&__name
			padding 1.88vw 0

		&__price
			padding 1.56vw 0 0.81vw
			font(Roboto, 2.25vw, 2.25vw, 500)

		&__time
			font(Roboto, 1.13vw, 2.25vw, 100)

		&__options
			padding 2.19vw 0 1.69vw

		&__btn-order
			margin 1.38vw
			padding 0.81vw 1vw 0.69vw
			
	.feedback
		&__title
			margin-bottom 3vw
			font(Roboto, 3.33vw, 4vw, 500)
			
		&__name
			margin-bottom 1.69vw
			padding 1.5vw
			font(Roboto, 2vw, 3.11vw, 100)
			placeholder(font-size, 2vw)

		&__email
			padding 1.5vw
			font(Roboto, 2vw, 3.11vw, 100)
			placeholder(font-size, 2vw)

		&__message
			padding 1.5vw
			font(Roboto, 2vw, 3.11vw, 100)
			placeholder(font-size, 2vw)

		&__btn
			margin-top 4vw
			padding 1.25vw 3.75vw
			font(Roboto, 1.8vw, 1.8vw, 100)
			
	.main-footer
		&__top
			size(100%, 23vw)
			padding 2.2vw 10vw

		&__about
			size(25vw, auto)
			margin-right 5vw
			font(Roboto, 1.3vw, 2vw, 100)

		&__footer-nav
			margin-right 7vw

		&__social-links
			size(15vw, 6vw)

		&__subscribe-form
			size(19vw, 9vw)

		&__copyright
			padding 1.9vw
			font(Roboto, 1.2vw, 2.25vw, 100)

	.about
		&__title
			font(Roboto, 1.5vw, 2.5vw, 300)

	.footer-nav
		&__title
			font(Roboto, 1.5vw, 2.5vw, 300)

		&__list
			column-gap 1.56vw
			
			li
				line-height 2vw

		&__link
			font(Roboto, 1vw, 1.88vw, 100)

	.social-links
		margin-bottom 1.5vw

		&__title
			font(Roboto, 1.5vw, 2.5vw, 300)

		&__link
			size(2.9vw)
			margin 0.4vw

		&__icon
			size(2.9vw)
			padding 0.7vw

	.subscribe-form
		&__title
			margin-bottom 0.7vw
			font(Roboto, 1.5vw, 2.5vw, 300)

		&__input-email
			width 100%
			margin-bottom 1.2vw
			padding 0.75vw
			font(Roboto, 1.1vw, 1.4vw, 100)
			placeholder(font-size, 1.1vw)

		&__btn
			padding 0.8vw 1.5vw
			font(Roboto, 1.1vw, 1.4vw, 100)