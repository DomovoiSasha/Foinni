+between(0px, 319px)
	.body
		width 319px
		overflow hidden
		
	.main-header
		size(100%, auto)

		&__bunner
			size(100%, 255px)

	.top-header
		size(100%, 48px)
		padding 0 32px
		background-color rgba(#000, 0.6)

	.logo
		font(Roboto, 22px, 22px, 500)

		&--accent
			margin-left -6px
			font(Pacifico, 35px, 22px)

	.main-nav
		size(24px)
		
		&__menu
			position absolute
			top 43px
			right  -32px
			display none
			size(319px, auto)
		
		&__btn
			display block
			margin-top -4px
			margin-left -5px
			size(26px)
			padding 3px
		
		&__svg-menu
			size(100%)

		&__item
			display block
			padding 40px
			background-color rgba(#000, 0.9)
			border-bottom 1px solid textColor
			text-align center
			font(Roboto, 13px, 13px, 200)
			
			&--active
				border-bottom 1px solid accent

				&:after
					display none
			
	.bunner
		&__title
			padding 13px 0
			font(Exo, 22px)

		&__tagline
			padding 5px 28px
			font(Roboto, 9px, 14px, 200)
			
	.main-content
		size(100%, auto)
		font(Roboto, 9.5px, 12px, 100)
		
		&__welcome
			padding 25px 25px 6px
			
		&__team
			padding 25px 25px 6px
			
		&__works
			padding 25px 10px 6px
			
		&__price
			padding 25px 10px 6px
			font(Roboto, 11px, 18px, 100)
			
		&__feedback
			padding 19px 31px

	.welcome
		&__title
			margin-bottom 11px
			font(Roboto, 12px, 14px, 500)

		&__discription
			margin-bottom 19px
			padding 0 9px
			
		&__option-list
			justify-content center

	.option
		size(190px, auto)
		padding 12px 15px

		&:nth-of-type(1),
		&:nth-of-type(2),
		&:nth-of-type(3),
		&:nth-of-type(4),
		&:nth-of-type(5)
			margin-bottom 17px

		&__icon
			size(21px, 25px)
			margin-bottom 7px

		&__title
			font-size 11px
			margin-bottom 10px

		&__description
			font-size 9px
			line-height 12px
			
	.team
		&__title
			margin-bottom 11px
			font(Roboto, 12px, 14px, 500)

		&__list
			width 269px
			flex-wrap wrap
			
	.member
		size(127px, auto)
		
		&:nth-of-type(1),
		&:nth-of-type(2)
			margin-bottom 15px
			
		&:hover
			.member__info
				bottom -5%
				left -5%
				size(110%, 110%)
				padding-top 45%
				background-color rgba(accent, 0.9)

			.member__social
				display block

		&__photo
			height 165px

		&__info
			padding 7px 0

		&__name
			font(Roboto, 12px, 15px, 300)

		&__position
			font(Roboto, 10px, 12px, 100)

		&__social
			margin-top 45px
			padding 4.5vw

		&__social-icon
			max-height 8.5vw
			max-width 22.5vw
			
	.works
		&__title
			margin-bottom 11px
			font(Roboto, 12px, 14px, 500)

		&__types li
			margin-bottom 15px
			
		&__photos-block
			justify-content center
			
			img
				size(230px)
				margin 10px 0

		&__see-more
			margin-top 10px
			padding 10px 20px
			font(Roboto, 10px, 10px, 100)

	.types__item
		padding 5px 8px
		font(Roboto, 10px, 12px, 100)
		
	.price
		position relative
		height 320px
		
		&__title
			margin-bottom 11px
			font(Roboto, 12px, 14px, 500)
			
		&__btn-prev
			position absolute
			top 50%
			left 15px
			display block
			size(22px)
			background-color transparent
			border none
			
		&__prev-icon
			size(22px)
			fill textColor
			
		&__btn-next
			position absolute
			top 50%
			right 15px
			display block
			size(22px)
			background-color transparent
			border none
			
		&__next-icon
			size(22px)
			fill textColor

	.price-plan
		display none
		width 190px
		height 245px
		margin 0 auto
			
		&:nth-of-type(3)
			display block

		&__name
			padding 11px 0

		&__price
			padding 13px 0 11px
			font(Roboto, 12px, 12px, 500)

		&__time
			font(Roboto, 9px, 10px, 100)

		&__options
			padding 14px 0 8px

		&__btn-order
			margin 9px
			padding 8px 13px 7px
			
	.feedback
		&__title
			margin-bottom 11px
			font(Roboto, 12px, 14px, 500)
			
		&__name
			width 100%
			margin-right 0
			margin-bottom 9.5px
			padding 6px
			font(Roboto, 9.5px, 12px, 100)
			placeholder(font-size, 9.5px)

		&__email
			width 100%
			margin-bottom 9.5px
			padding 6px
			font(Roboto, 9.5px, 12px, 100)
			placeholder(font-size, 9.5px)

		&__message
			height 30vw
			padding 6px
			font(Roboto, 9.5px, 12px, 100)
			placeholder(font-size, 9.5px)

		&__btn
			margin-top 13px
			padding 10px 20px
			font(Roboto, 10px, 10px, 100)
			
	.main-footer
		&__top
			align-content space-around
			size(100%, 89.6px)
			padding 9.6px 48px

		&__about
			display none

		&__footer-nav
			margin-right 22.4px

		&__social-links
			size(80px, 25.9px)

		&__subscribe-form
			size(96px, 28.8px)

		&__copyright
			padding 9.6px
			font(Roboto, 7px, 11.2px, 100)
			
	.footer-nav
		&__title
			font(Roboto, 8px, 11.2px, 300)

		&__list
			column-gap 8px
			
			li
				line-height 8.3px

		&__link
			font(Roboto, 7px, 9.6px, 100)

	.social-links
		margin-bottom 6.4px

		&__title
			font(Roboto, 8px, 11.2px, 300)

		&__link
			size(12.8px)
			margin 2.5px

		&__icon
			size(12.8px)
			padding 3.2px

	.subscribe-form
		&__title
			margin-bottom 3.2px
			font(Roboto, 8px, 11.2px, 300)

		&__input-email
			width 65%
			margin-bottom 0vw
			padding 2.8px
			font(Roboto, 5.8px, 7.7px, 100)
			placeholder(font-size, 5.8px)

		&__btn
			width 35%
			padding 2.8px 0
			text-align center
			font(Roboto, 5.8px, 7.7px, 100)